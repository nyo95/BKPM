// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  pm
  designer
  client
}

enum PhaseKey {
  moodboard
  layout
  design
  material_scheduler
  construction_drawing
  supervision
}

enum RevisionStatus {
  draft
  submitted
  approved
  rejected
}

enum TaskStatus {
  backlog
  in_progress
  review
  done
}

enum MaterialStatus {
  sampled
  approved
  replaced
  obsolete
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  projects    Project[]
  
  @@map("organizations")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String
  passwordHash   String
  role           Role     @default(designer)
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  organization   Organization @relation(fields: [organizationId], references: [id])
  assignedTasks  Task[]       @relation("TaskAssignee")
  
  @@map("users")
}

model Project {
  id             String    @id @default(cuid())
  organizationId String
  name           String
  code           String    @unique
  clientName     String?
  startDate      DateTime
  endDate        DateTime?
  description    String?
  createdBy      String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  organization   Organization @relation(fields: [organizationId], references: [id])
  phases         Phase[]
  tasks          Task[]
  materials      MaterialItem[]
  attachments    Attachment[]
  activity       ActivityLog[]
  
  @@map("projects")
}

model Phase {
  id        String    @id @default(cuid())
  projectId String
  key       PhaseKey
  name      String
  order     Int
  weight    Int       // bobot 0-100
  startDate DateTime?
  dueDate   DateTime?
  progress  Int       @default(0) // 0-100 dihitung dari tasks
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  project   Project    @relation(fields: [projectId], references: [id])
  revisions Revision[]
  tasks     Task[]
  attachments Attachment[]
  comments  Comment[]
  
  @@unique([projectId, key])
  @@map("phases")
}

model Revision {
  id         String         @id @default(cuid())
  phaseId    String
  label      String         // "Layout 1", "D1", "CD2", dll
  notes      String?
  status     RevisionStatus @default(draft)
  submittedAt DateTime?
  decidedAt  DateTime?
  createdBy  String
  createdAt  DateTime       @default(now())
  
  phase      Phase         @relation(fields: [phaseId], references: [id])
  attachments Attachment[]
  comments   Comment[]
  
  @@map("revisions")
}

model Task {
  id          String     @id @default(cuid())
  projectId   String
  phaseId     String?
  title       String
  description String?
  status      TaskStatus @default(backlog)
  progress    Int        @default(0) // 0-100
  assigneeId  String?
  startDate   DateTime?
  dueDate     DateTime?
  order       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  project     Project    @relation(fields: [projectId], references: [id])
  phase       Phase?     @relation(fields: [phaseId], references: [id])
  assignee    User?      @relation("TaskAssignee", fields: [assigneeId], references: [id])
  comments    Comment[]
  
  @@map("tasks")
}

model Attachment {
  id           String   @id @default(cuid())
  projectId    String
  phaseId      String?
  revisionId   String?
  filename     String
  originalName String
  mimeType     String
  size         Int
  path         String
  uploadedBy   String
  createdAt    DateTime @default(now())
  
  project      Project   @relation(fields: [projectId], references: [id])
  phase        Phase?    @relation(fields: [phaseId], references: [id])
  revision     Revision? @relation(fields: [revisionId], references: [id])
  
  @@map("attachments")
}

model MaterialItem {
  id        String         @id @default(cuid())
  projectId String
  code      String         // PT-1, PL-3, GL-2, dst
  name      String
  category  String         // PT, PL, GL, MT, etc
  vendor    String?
  url       String?
  price     Float?
  status    MaterialStatus @default(sampled)
  notes     String?
  createdAt DateTime       @default(now())
  
  project   Project @relation(fields: [projectId], references: [id])
  
  @@map("material_items")
}

model Comment {
  id        String   @id @default(cuid())
  taskId    String?
  phaseId   String?
  revisionId String?
  authorId  String
  body      String
  createdAt DateTime @default(now())
  
  task      Task?     @relation(fields: [taskId], references: [id])
  phase     Phase?    @relation(fields: [phaseId], references: [id])
  revision  Revision? @relation(fields: [revisionId], references: [id])
  
  @@map("comments")
}

model ActivityLog {
  id        String   @id @default(cuid())
  projectId String
  actorId   String
  action    String   // "CREATE_TASK", "UPDATE_PHASE", dll
  payload   Json?
  createdAt DateTime @default(now())
  
  project   Project @relation(fields: [projectId], references: [id])
  
  @@map("activity_logs")
}